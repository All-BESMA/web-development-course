<%-include("partials/header");%>
<h1>Home</h1>

<p><%= homeText%></p>

<% postsArray.forEach(function(post){ %>
  <% let postPath = "/posts/" + post.title.replace(" ", "-"); %>
  <h1><%= post.title %></h1>
  <p><%= post.content.substr(0, 1000) + "..." %>
  <a href=<%= postPath %>>Read More</a></p>
<% }); %>

<%-include("partials/footer")%>
